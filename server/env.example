# Research Hub Backend Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DATABASE_PATH=../database/research_hub.db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Email Configuration (for user verification and notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@researchhub.com
FROM_NAME=Research Hub

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_ANALYTICS_TRACKING=true
ENABLE_FEEDBACK_SYSTEM=true

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=1800000

# File Upload (if needed later)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/
